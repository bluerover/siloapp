<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title><%- title %></title>
    <link rel="apple-touch-icon" href="/images/apple-touch-icon-precomposed.png">
    <% if (typeof(stylesheets) !== 'undefined') { %>
        <%- stylesheets %>
    <% } %>
    <% if (typeof(dashboard_widgets) !== 'undefined') {
        for (var i in dashboard_widgets) {
          var widget = dashboard_widgets[i]; %>
          <link rel="stylesheet" type="text/css" href="/widget_assets/styles/<%= widget.widget.css_filename %>" />
    <%  } 
    }%>
    <% if (typeof(dashboard_widgets) !== 'undefined') {
        for (var i in dashboard_widgets) {
          var widget = dashboard_widgets[i]; %>
          <script type="text/javascript" src="/widget_assets/js/<%= widget.widget.js_filename %>"></script>
    <%  } 
    }%>
    <link rel="stylesheet" type="text/css" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>

    <!-- Base styles -->
    <link href="/styles/base.css" rel="stylesheet">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
    <script type="text/javascript" src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/base.js"></script>
    <script type="text/javascript" src="/js/moment.min.js"></script>
    <% if (typeof(load_dashboard_js) !== "undefined" && load_dashboard_js) { %>
        <%- include dashboard/js/dashboard_js.ejs %>
    <% } %>
    <% if (typeof (header_javascript) !== "undefined") { %>
        <%- header_javascript %>
    <% } %>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/dashboard"><div class="logo"></div></a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li <%= (typeof(page_category) !== "undefined" && page_category === "dashboard") ? 'class=active' : '' %>><a href="/dashboard">Dashboard</a></li>
            <li <%= (typeof(page_category) !== "undefined" && page_category === "farm") ? 'class=active' : '' %>><a <%= (typeof(current_farm) !== "undefined") ? 'href=/farm/' + current_farm : 'href=javascript:;' %>>Farm</a></li>
            <li <%= (typeof(page_category) !== "undefined" && page_category === "bin") ? 'class=active' : '' %>><a <%= (typeof(current_bin) !== "undefined") ? 'href=/bin/' + current_bin : 'href=javascript:;' %>>Bin</a></li>
            <li <%= (typeof(page_category) !== "undefined" && page_category === "productmgmt") ? 'class=active' : '' %>><a href="/products">Product Management</a></li>
            <li class="dropdown <%= (typeof(page_category) !== "undefined" && page_category === "messages") ? 'active' : '' %>">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= full_name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li <%= (typeof(page_category) !== "undefined" && page_category === "settings") ? 'class=active' : '' %>><a href="/user/settings">Account Settings</a></li>
                    <li class="divider"></li>
                    <li><a href="/user/logout">Logout</a></li>
                </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

<div class="content">
    <%- body %>
</div>
<% if (typeof(body_javascript) !== "undefined") { %>
    <%- body_javascript %>
<% } %>
</body>
</html>
