<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="img/favicon.ico">

    <title>blueRover</title>

    <!-- Custom styles for this template -->
    <link href="/styles/calendar.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="container">

      <div class="page-header-search">
        <h1>Farm Details</h1>
        <div class="clearfix"></div>
      </div>

    </div>

    <div class="container" style="margin-top:40px;">
      <div id="map-container">
      </div>
    </div>
    
    <div class="container">

      <div class="row">
        <div class="col-md-12">

          <div class="elm-grouping">
            <h3>Farm Details</h3>
            <p>Name: <%= farm.name %></p>
            <p>Address: <%= farm.address %></p>
            <p>Region: <%= farm.region.name %></p>
            <p>Non-dynamic description :(</p>
          </div>

          <div class="elm-grouping">
          
            <h3>Silo Status</h3>
            <div class="input-group col-sm-5">
              <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th colspan="2">Level</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Capacity</th>
                  <th>Product</th>
                  <th>RFID</th>
                  <th>Last Reported</th>
                  <th>Location</th>
                </tr>
              </thead>
              <tbody id="silo-list">
                <% for (var i = 0; i < silos.length; i++) { %>
                  <tr id="silo-rfid-<%= silos[i].rfid %>" class="clickableRow" data-url="/silo/<%= silos[i].id %>">
                    <td>
                      <div class="level">
                        <span class="level-bar"></span>
                        <span class="level-bar"></span>
                        <span class="level-bar"></span>
                        <span class="level-bar"></span>
                      </div>
                    </td>
                    <td id="silo-rfid-<%= silos[i].rfid %>-level">0%</td>
                    <td><%= silos[i].name %></td>
                    <td><%= silos[i].desc %></td>
                    <td><%= silos[i].capacity %></td>
                    <td><%= silos[i].product.name %></td>
                    <td><%= silos[i].rfid %></td>
                    <td id="silo-rfid-<%= silos[i].rfid %>-timestamp">Never</td>
                    <td><%= silos[i].location %></td>
                  </tr>
                <% } %>
              </tbody>
            </table>

            <ul class="pagination">
              <li><a href="#">&laquo;</a></li>
              <li><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#">&raquo;</a></li>
            </ul>
          </div>

        </div>

      </div>
    </div><!-- /.container -->


    <div class="footer">
      <div class="container">
        <p class="text-muted">Copyright Â© 2014 BlueRover Inc. All rights reserved.</p>
      </div>
    </div>

    <script src="/js/calendar.min.js" type="text/javascript"></script>
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="/js/markerclusterer_compiled.js" type="text/javascript"></script>
    <script src="/js/markerwithlabel_packed.js" type="text/javascript"></script>

    <script>
      var silos = JSON.parse("<%= JSON.stringify(silos) %>".replace(/&quot;/g,'"'));
      var farm = JSON.parse("<%= JSON.stringify(farm) %>".replace(/&quot;/g,'"'));
      $(document).ready(function() {
        for(var index in silos) {
          $.ajax({
            type: "GET",
            url: "/silo_data/" + silos[index].rfid + "/recent",
            data: {},
            success: function(data) {
              //we only need the most recent one
              var siloData = JSON.parse(data)[0];
              if(!siloData || siloData === undefined) {
                return;
              }

              //add it to silo data instead of using jquery
              $('#silo-rfid-' + siloData.rfidTagNum + '-level').html(siloData.level + "%");
              $('#silo-rfid-' + siloData.rfidTagNum + '-timestamp').html(moment.unix(siloData.timestamp).format("MMM D YYYY, HH:mm:ss"));

              var colors = ['green', 'yellow', 'orange', 'red'];
              for(var index in siloData.binaryLevel) {
                if(typeof(siloData.binaryLevel[index]) !== "function" && siloData.binaryLevel[index] === "1") {
                  $('#silo-rfid-' + siloData.rfidTagNum + " .level span:nth-child(" + (parseInt(index,10)+1) + ")").addClass(colors[index]);
                }
              }
            },
            error: function(response) {
                console.log("Error");
                console.log(response);
            }
          });
        }
      });
      function createMarker(name,type,location,desc,id) {
        var locationArray = location.split(",");
        var marker = new MarkerWithLabel({
          position: new google.maps.LatLng(locationArray[0],locationArray[1]),
          map: map,
          draggable: false,
          raiseOnDrag: false,
          title: name,
          icon: "/images/" + type + ".png",
          // labelContent: "A",
          // labelAnchor: new google.maps.Point(3, 30),
          // labelClass: "labels", // the CSS class for the label
          // labelInBackground: false
        });
        marker.link_id = id;
        marker.asset_type = type;
        var descArray = desc.split("|");
        marker.desc1 = descArray[0];
        marker.desc2 = descArray[1];

        google.maps.event.addListener(marker, 'click', function() {
          map.setZoom(16);
          map.setCenter(this.getPosition());
          infoWindow.setContent("<strong>" + this.getTitle() + "</strong><br/>" + this.desc1 + "<br/>" + this.desc2 + "<br/>" + "<div><a style='font-weight:800;' href='/" + this.asset_type + "/" + this.link_id + "'>View Location</a></div>");
          infoWindow.open(map, this);
        });
        markerIndex.push(marker);
      }
      var markerIndex = [];

      //center the map on the farm
      var centerArray = farm.location.split(",");
      var mapOptions = {zoom: 15, center: new google.maps.LatLng(centerArray[0],centerArray[1])};
      var map = new google.maps.Map($('#map-container')[0],mapOptions);
      var infoWindow = new google.maps.InfoWindow({
        maxWidth: 200
      });

      createMarker(farm.name,"farm",farm.location,farm.address,farm.id);
      for(var index in silos) {
        var silo = silos[index];
        createMarker(silo.name,"silo",silo.location, silo.desc + "|Capacity: " + silo.capacity,silo.id);
      }
      var mcOptions = { 
        styles: [{ height: 53,url: "http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/images/m1.png",width: 53},
                 {height: 56,url: "http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/images/m2.png",width: 56},
                 {height: 66,url: "http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/images/m3.png",width: 66},
                 {height: 78,url: "http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/images/m4.png",width: 78},
                 {height: 90,url: "http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/images/m5.png",width: 90}
                ],
        gridSize: 50,
        maxZoom: 15
      }

      var mc = new MarkerClusterer(map, markerIndex, mcOptions);

      $("#srch-term").keyup(function () {
        typewatch(function () {
          // executed only 500 ms after the last keyup event.
          var searchTerm = $("#srch-term").val();
          var searchSplit = searchTerm.replace(/ /g, "'):containsi('");
          $("#silo-list tr").not(":containsi('" + searchSplit + "')").each(function(e)   {
                $(this).css('display','none');
          });
          
          $("#silo-list tr:containsi('" + searchSplit + "')").each(function(e) {
                $(this).css('display','table-row');
          });
        }, 700);
      });
    </script>
  </body>
</html>