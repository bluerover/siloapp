<div class="panel panel-default">
    <div class="panel-heading"><h2><%= action %> a product</h2></div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Name</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control input-sm" name="name" value="<%= product.name %>" />
                        <input type="hidden" class="form-control" name="id" value="<%= product.id %>" />
                        <input type="hidden" class="form-control" name="organization" value="<%= product.organization %>" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">SKU ID</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control input-sm" name="SKU_ID" value="<%= product.SKU_ID %>" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Description</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control input-sm" name="desc" value="<%= product.desc %>" />
                    </div>
                </div>
                
            	<div style="float:right;">
            	    <a href="javascript:;" id="submitForm" data-action="<%= action %>" class="btn btn-lg btn-success btn-block" style="padding:10px;">Save Product</a>
            	</div>
            </form>
        </div>
    </div>
</div>