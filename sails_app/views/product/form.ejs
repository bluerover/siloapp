<h2><%= action %> a product</h2>
<form class="form-horizontal">
    <div class="form-group">
        <label class="col-lg-3 control-label">Name</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" name="name" value="<%= product.name %>" />
            <input type="hidden" class="form-control" name="id" value="<%= product.id %>" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 control-label">SKU ID</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" name="SKU_ID" value="<%= product.SKU_ID %>" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 control-label">Description</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" name="desc" value="<%= product.desc %>" />
        </div>
    </div>
    
	<div style="float:right;">
	    <a href="javascript:;" id="submitForm" data-action="<%= action %>" class="btn btn-lg btn-success btn-block" style="padding:10px;">Save Product</a>
	</div>
</form>